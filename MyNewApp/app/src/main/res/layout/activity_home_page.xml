<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@drawable/iml22"
    tools:context="com.bridgelabz.mynewapp.HomePage">



    <TextView
        android:text="Author :-\n"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:text="WELCOME \n TO \n BRIDGELABZ\n "
        android:textSize="30dp"
        android:textColor="@android:color/holo_red_dark"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginBottom="30dp"
        android:layout_alignBottom="@+id/buttoncal"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Logout"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:id="@+id/logout"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_above="@+id/textView2" />

    <Button
        android:text="Calculator"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/buttoncal"
        android:layout_marginEnd="24dp"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/logout" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:srcCompat="@drawable/fgf"
        android:id="@+id/imageView4"
        android:layout_marginBottom="122dp"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true" />

</RelativeLayout>
