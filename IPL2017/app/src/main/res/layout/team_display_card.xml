<android.support.v7.widget.CardView
    android:id="@+id/team_card"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="5dp"
    card_view:cardBackgroundColor="@android:color/holo_blue_dark"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageview_teamcard_imgurl"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/img22" />

        <TextView
            android:id="@+id/textview_team_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Team Name"
            android:layout_toEndOf="@+id/imageview_teamcard_imgurl"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="66dp"
          />
        <TextView
            android:id="@+id/textview_team_owner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Team Owner"
            android:layout_toEndOf="@+id/imageview_teamcard_imgurl"
            android:layout_below="@+id/textview_team_name"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="36dp"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>
